{% extends "default/home.html.twig"  %}
{% block content %}
    <div class="container" >
        <h2 class="w3_heade_tittle_agile" style="margin-top: 20px">Propose</h2>
        <p class="sub_t_agileits">Your Question</p>
    <form method="post" style="text-align: center ; margin-top: 30px ;">
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Subject</label>
            <div class="col-sm-10">
                <input type="text" class="form-control"  name="subject" placeholder="Subject" required="">
            </div>
        </div>
        <div class="form-group row">
            <label  class="col-sm-2 col-form-label" >Category</label>
            <div class="col-sm-10">
                <select class="form-control" required="" name="cat">
                    {% for categorie in categorie %}
                        <option> {{ categorie.NomCatf }}</option>
                        {% endfor %}
                </select>
            </div>
        </div>


        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Question</label>
            <div class="col-sm-10">
                <textarea class="form-control" required="" name="question" style="height: 200px"></textarea>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-offset-10">
                <button type="submit" class="btn btn-success">Add Question</button>
            </div>
        </div>
    </form>
    </div>




{%  endblock content %}