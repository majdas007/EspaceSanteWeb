{% extends '::default/home.html.twig' %}

{% block content %}
    {% block fos_user_content %}
        <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js" ></script>
        <script src="{{ asset('bootstrap.min.js') }}" crossorigin="anonymous"></script>
        <link href="{{ asset('bootstrap.min.css') }}" rel="stylesheet">

        <script>

            $('#nom').keyup(function(){
                var input= $("#nom").val();
                $.ajax({
                    type: "POST",
                    url: "{{ path('chercher_service') }}",
                    data: {'nom': input},
                    success: function (data) {

                        console.log(data);

                        $("#res").html(data);



                    }
                });

            });

        </script>

        <script  type="text/javascript" >

            $(document).ready(function() {
                $('#t01').DataTable( {
                    dom: 'Bfrtip',
                    buttons: [

                    ]
                } );
            } );

        </script>


        <h2 class="w3_heade_tittle_agile">Trouver un professionnel de sant√©</h2>
        <p class="sub_t_agileits">Quality Care...</p>
        <form>

            <input id="nom" type="text" nom="nom" placeholder="nom">
        </form>


        {%for services in services %}
            {%set v = FALSE %}

            {% for reclamation in reclamations %}
                {% if reclamation.getIdService== services  %}
                    {%set v = TRUE %}
                {% endif %}
            {% endfor %}
            <div class="Department_girds_agileits">
                <div class="agile_team_grid">

                    <div class="col-md-3 w3ls_banner_bottom_grid hvr-shutter-in-horizontal">

                        <img src="{{ asset('images/')}}{{ services.imageServ }}" alt=" " class="img-responsive">
                        <div class="overlay">
                            <h4>{{ services.specialite }}</h4>
                            <h4>Docteur {{ services.prenom }}  {{ services.nom }}</h4>

                            <ul class="social_agileinfo">
                                <li><a href="{{ path('profil', { 'idService': services.idService }) }}" class="w3_facebook"><i class="fa fa-eye"></i></a></li>
                                {% if v == FALSE  %}
                                    <li><a  class="w3_twitter" data-toggle="modal" data-target="#{{ services.idService }}"><i class="fa fa-hand-o-left"></i></a></li>
                                {% endif %}

                            </ul>
                        </div>
                    </div>



                </div>



                <div class="clearfix"> </div>




                <!-- Modal -->
                <div class="modal fade" id="{{ services.idService }}" tabindex="-1" role="dialog" aria-labelledby="reclamationLabel" aria-hidden="true">
                    <div class="modal-dialog modal-sm">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title" id="reclamationLabel">Reclamation</h4>
                            </div>
                            <form id="addform" name="addform" action="{{ path('reclamerservice', { 'idService': services.idService }) }}" method="post">
                                <div class="modal-body">
                                    <label>
                                        <input name="id" id="id" value="{{ services.idService }}" hidden>
                                    </label>
                                    <textarea rows="10" cols="35" name="description" id="description"></textarea>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" onclick='' data-dismiss="modal">annuler</button>
                                    <button type="submit" class="btn btn-success" onclick=''>Envoyer</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        {% endfor %}





    {% endblock %}

{% endblock %}