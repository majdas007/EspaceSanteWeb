{% extends 'default/home.html.twig' %}

{% block body %}
    <center>
        <p id="timer">______</p>
    <h1>Quiz</h1>

    <table>
        <tbody>

            <tr>
                <th></th>
                <td>{{ quiz.titre }}</td>
            </tr>
        </tbody>
    </table>



    </center>

<div>
    <form  method="post">
    <table class="table table-striped table-bordered ">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Questions</th>
            <th scope="col">Reponses</th>

        </tr>
        </thead>
        <tbody>
        {%  set i=1 %}
          {% for question in questions %}

        <tr style="border-bottom: 1px">
            <th scope="row">{{ i }}</th>



              <td > {{ question.question }}</td>
    {% for reponse in reponses %}

{% if (reponse.idQuestion.id == question.id)%}
        <td style="display:table-row; border:none !important; "> <input type="radio" name="rep{{ i }}" value="{{ reponse.isCorrect }}"> {{ reponse.reponse }} </td>

{% endif %}
    {% endfor %}

        </tr>
              {%  set i=i+1 %}
        {% endfor %}

            <td colspan="3"><center><input class="btn btn-info" type="submit" value="Valider"></center></td>
        </tr>
        </tbody>
    </table>



    </form>

{% endblock %}