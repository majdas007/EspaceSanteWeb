{% extends "default/home.html.twig" %}

{% block content %}


<center>
    <div class="container">
        <div class="card" style="width:500px">
            <div class="card-body" align="left" style="font-style: italic">
               <br><br>
                <h4 class="card-title">Titre de l'Offre : {{Offre.titreAnnonce}}</h4><br><br>
                <p class="card-text">Description de l'Offre :  {{Offre.descAnnonce}}</p><br>
                <p class="card-text">Date de l'Offre : {{Offre.dateAnnonce}}</p><br>
                <p class="card-text">Adresse de l'Offre : {{Offre.addrAnnonce}}</p><br>
                <p class="card-text">Telephone de l'Offre : {{Offre.telAnnonce}}</p><br>
            </div>
            <br>
            <img class="card-img-bottom" src="https://tiny.pictures/api/demo/main/example1.jpg" alt="Card image" style="width:100%">
            <br><br>

        </div>
    </div>
</center>
{% endblock content %}
